{
  "manifest_version": 3,
  "name": "Q-SCI: Scientific Paper Quality Evaluator",
  "version": "12.0.0",
  "description": "Automatically analyze the scientific quality of research papers with AI-powered evaluation. Features comprehensive PDF analysis by default with HTML fallback, impact factors, quality scores, and detailed feedback.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://pubmed.ncbi.nlm.nih.gov/*",
    "https://pmc.ncbi.nlm.nih.gov/*",
    "https://www.ncbi.nlm.nih.gov/*",
    "https://arxiv.org/*",
    "https://scholar.google.com/*",
    "https://www.nature.com/*",
    "https://www.science.org/*",
    "https://www.cell.com/*",
    "https://www.thelancet.com/*",
    "https://jamanetwork.com/*",
    "https://www.nejm.org/*",
    "https://journals.plos.org/*",
    "https://www.bmj.com/*",
    "https://academic.oup.com/*",
    "https://link.springer.com/*",
    "https://www.sciencedirect.com/*",
    "https://onlinelibrary.wiley.com/*",
    "https://www.tandfonline.com/*",
    "https://www.frontiersin.org/*",
    "https://www.mdpi.com/*",
    "https://journals.sagepub.com/*",
    "https://www.karger.com/*",
    "https://www.liebertpub.com/*",
    "https://www.thieme-connect.com/*",
    "https://europepmc.org/*",
    "https://www.biorxiv.org/*",
    "https://www.medrxiv.org/*",
    "https://www.researchgate.net/*",
    "https://www.semanticscholar.org/*",
    "https://www.cochranelibrary.com/*",
    "https://elifesciences.org/*",
    "https://www.pnas.org/*",
    "https://journals.asm.org/*",
    "https://www.jci.org/*",
    "https://www.ahajournals.org/*",
    "https://journals.lww.com/*",
    "https://www.jneurosci.org/*",
    "https://www.bloodjournal.org/*",
    "https://cancerres.aacrjournals.org/*",
    "https://www.gastrojournal.org/*",
    "https://www.kidney-international.org/*",
    "https://www.sciencemag.org/*",
    "http://localhost:5000/*",
    "https://3000-ihim6em9vakbhsgb4zp4p-b38323ba.manusvm.computer/*",
    "https://api.openai.com/*",
    "https://q-sci.org/*",
    "https://www.q-sci.org/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://pubmed.ncbi.nlm.nih.gov/*",
        "https://pmc.ncbi.nlm.nih.gov/*",
        "https://www.ncbi.nlm.nih.gov/*",
        "https://arxiv.org/*",
        "https://scholar.google.com/*",
        "https://www.nature.com/*",
        "https://www.science.org/*",
        "https://www.cell.com/*",
        "https://www.thelancet.com/*",
        "https://jamanetwork.com/*",
        "https://www.nejm.org/*",
        "https://journals.plos.org/*",
        "https://www.bmj.com/*",
        "https://academic.oup.com/*",
        "https://link.springer.com/*",
        "https://www.sciencedirect.com/*",
        "https://onlinelibrary.wiley.com/*",
        "https://www.tandfonline.com/*",
        "https://www.frontiersin.org/*",
        "https://www.mdpi.com/*",
        "https://journals.sagepub.com/*",
        "https://www.karger.com/*",
        "https://www.liebertpub.com/*",
        "https://www.thieme-connect.com/*",
        "https://europepmc.org/*",
        "https://www.biorxiv.org/*",
        "https://www.medrxiv.org/*",
        "https://www.researchgate.net/*",
        "https://www.semanticscholar.org/*",
        "https://www.cochranelibrary.com/*",
        "https://elifesciences.org/*",
        "https://www.pnas.org/*",
        "https://journals.asm.org/*",
        "https://www.jci.org/*",
        "https://www.ahajournals.org/*",
        "https://journals.lww.com/*",
        "https://www.jneurosci.org/*",
        "https://www.bloodjournal.org/*",
        "https://cancerres.aacrjournals.org/*",
        "https://www.gastrojournal.org/*",
        "https://www.kidney-international.org/*",
        "https://www.sciencemag.org/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-style.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Q-SCI: Analyze Scientific Papers",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "qsci-widget.html",
        "qsci-widget.css",
        "qsci-widget.js",
        "qsci_evaluator.js",
        "qsci_ui_badges.css",
        "qsci_calibration_publications.json",
        "popup.html",
        "clerk-auth.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}

